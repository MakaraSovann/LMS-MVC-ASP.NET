@model IEnumerable<LMSMVC.Models.Book>
@{
    ViewData["Title"] = "Index";
}
<div class="card">
    <div class="card-header">
        <h2 class="card-title">Book List</h2>
    </div>
    <div class="card-danger">
        <p>
            <a asp-action="Create" class="btn btn-outline-primary btn-sm float-right"><i class="fa-solid fa-cart-plus"></i> Add New Book</a>
        </p>
        <table class="table table-avatar table-bordered ">
            <tr style="background-color: #12c2e9;">
                <th>
                    @Html.DisplayNameFor(model => model.BookId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BookName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BookCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Author)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BookDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
                <th>
                    Action
                </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model => item.BookId)
                    </td>
                    <td>
                        @Html.DisplayFor(Model => item.BookName)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.BookCode)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Author)
                    </td>
                    <td>
                        @Html.DisplayFor(Model => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.BookDate)
                    </td>
                    <td>
                        @Html.DisplayFor(model => item.Quantity)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-controller="Book" asp-route-BookId="@item.BookId" class="btn btn-outline-primary ml-1"><i class="fas fa-edit"></i> Edit</a>
                        <a asp-action="Delete" asp-controller="Book" asp-route-BookId="@item.BookId" class="btn btn-outline-danger"><i class="fa-solid fa-trash"></i> Delete</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>